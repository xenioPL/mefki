<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlarmTextRightItemOfList" parent="@style/AlarmItemOfList">
        <!--<item name="android:layout_marginEnd">@dimen/margin_alarm</item>-->
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="AlarmTextLeftItemOfList" parent="@style/AlarmItemOfList">
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="AlarmItemOfList">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_alarm</item>
        <item name="android:layout_marginRight">@dimen/margin_alarm</item>
    </style>

    <style name="AlarmSwitchItem" parent="@style/AlarmItemOfList">
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="colorPrimary">@color/MevoLightBlue</item>
        <item name="colorPrimaryDark">white</item>
        <item name="colorAccent">@color/MevoRed</item>
    </style>

</resources>
