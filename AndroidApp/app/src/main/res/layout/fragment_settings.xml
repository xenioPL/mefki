<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView

            android:text="Notifications"
            android:textColor="#384977"
            android:background="#ffffff"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textNotifications"
    />



    <TextView
            android:layout_below="@id/textNotifications"
            android:text="Sound"
            android:textColor="#384977"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSound"
            />

    <Button
            android:layout_toRightOf="@id/textSound"
            android:layout_below="@id/textNotifications"
            android:layout_centerVertical="true"

            android:text="chooseSound"
            android:textColor="#ACACAC"

            android:textSize="12sp"
            android:padding="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chooseSound"
            />

    <CheckBox
            android:layout_alignRight="@id/chooseSound"
            android:layout_below="@id/textNotifications"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSound" android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"/>


    <TextView
            android:layout_below="@id/textSound"
            android:text="Vibration"
            android:textColor="#384977"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textVibration"
            tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="0dp"/>

    <CheckBox
            android:layout_alignRight="@id/textVibration"
            android:layout_below="@id/textSound"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSound" android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"/>

    <TextView
            android:layout_below="@id/textVibration"
            android:text="Overlay"
            android:textColor="#384977"

            android:textSize="18sp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textOverlay"
            tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="0dp"/>

    <CheckBox
            android:layout_alignRight="@id/textOverlay"
            android:layout_below="@id/textVibration"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSound" android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"/>

    <TextView
            android:layout_below="@id/textOverlay"
            android:text="Turn off after"
            android:textColor="#384977"

            android:textSize="18sp"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textTurnOff"/>

    <Button
            android:layout_toRightOf="@id/textTurnOff"
            android:layout_below="@id/textOverlay"
            android:layout_centerVertical="true"

            android:text="chooseSound"
            android:textColor="#ACACAC"

            android:textSize="12sp"
            android:padding="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chooseTurnOff"
    />

    <CheckBox

            android:layout_below="@id/textOverlay"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBoxSound" android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"/>





</RelativeLayout>